extends skeleton_general

block scripts
  meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')

  //- Easier method than putting target='_blank' on every link
  //- base(target='_blank')

block page-title
  |Wave

block header
  |WAVE

block contents
  input#year(type='hidden' value=year)
  = errorMessage
  .row
    #filters.columns.small-11.large-4.small-centered.medium-uncentered
      .row#heads-up All changes are applied immediately.
      include ../static/course-data/compiled/filters.html
      .row#schedule
        .column.small-12
          //- include ../static/jade-includes/week-schedule.jade
          each time in [800, 830, 900, 930, 1000, 1030, 1100, 1130, 1200, 1230, 100, 130, 200, 230, 300, 330, 400, 430, 500, 530]
            //- Saving: class= (time % 100) ? 'underlined' : ''
            div.sched-row(id=time)
              div.sched-col.row-label
              each day in ['mon', 'tues', 'wed', 'thurs', 'fri']
                div.sched-col(class=day)
      //- .row
      //-   a(href='/wave/feedback') Feedback?


    .column.small-12.large-7.dataContainer
      #loading-placeholder
        #progress-value
        img(src='images/spinner.gif')
      //- != dynamicData