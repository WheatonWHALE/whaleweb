extends skeleton_general

block scripts
  script(type='text/javascript' src='/static/templates/templates.js' defer)
  meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')

block contents
  = errorMessage
  .row
    .columns.small-12.large-5
      .row
        .columns.small-6
          select(name='semester')
            option(value='all') - Semester -
            option(value='fall' selected) Fall
            option(value='winter') Winter
            option(value='spring') Spring
            option(value='summer') Summer
        .columns.small-6
          select(name='department')
            option(value='all') - Department -
            each department in filterData['department']
              option(value=department)= department

      .row
        .columns.small-6
          select(name='foundation')
            option(value='all') - Foundation -
        .columns.small-6
          select(name='division')
            option(value='all') - Division -

      .row
        .columns.small-6
          select(name='foundation')
            option(value='all') - Area -
        .columns.small-6
          select(name='division')
            option(value='all') - Interdis. Major -

      .row
        |Schedule preview

    .columns.small-12.large-7
      each semesterData, semesterName in courseData['2014-2015']
        .semesterContainer(class=semesterName)

          each departmentData, departmentName in semesterData
            .departmentContainer(class=departmentName)

              each course in departmentData
                .row.course
                  .columns.small-6
                    = course['courseTitle']
                  .columns.small-6.text-right
                    = course['courseCode']
                  .secondary-info.hidden
                    .columns.small-6
                      = course['crn']
                    .columns.small-6.text-right
                      = course['meetingTime']
                    .columns.small-6
                      = course['meetingPlace']
                    .columns.small-6.text-right
                      = course['professors']
                    .columns.small-6
                      = course['courseAttributes']
                    .columns.small-6.text-right
                      = course['connections']
                    .columns.small-6
                      = course['examSlot']
                    .columns.small-6.text-right
                      a(href=course['textbookLink']) Textbook



